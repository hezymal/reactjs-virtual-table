{
    "compilerOptions": {
        "types": ["vite/client"],
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "commonjs",

        // bundler mode
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        // paths
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
